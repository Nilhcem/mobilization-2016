<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Loading -->
    <style name="Loading">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Session details -->
    <style name="Session"/>

    <style name="Session.Details"/>

    <style name="Session.Details.Category">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:paddingLeft">@dimen/activity_margin</item>
        <item name="android:paddingRight">@dimen/activity_margin</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Session.Details.Content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">@dimen/activity_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_margin</item>
        <item name="android:paddingLeft">@dimen/activity_margin</item>
        <item name="android:paddingStart">@dimen/activity_margin</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Speaker details -->
    <style name="Speaker"/>

    <style name="Speaker.Details"/>

    <style name="Speaker.Details.Link">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">@dimen/activity_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_margin</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Venue -->
    <style name="Venue"/>

    <style name="Venue.Title">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:paddingTop">@dimen/activity_margin</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Venue.Content">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
